# Production Environment Variables
# Copy this to .env and fill in your actual keys

# OpenAI API Key (required for GPT models)
OPENAI_API_KEY=your_openai_api_key_here

# Anthropic API Key (required for Claude models)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# ElevenLabs API Key (optional - for voice synthesis)
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here

# Stripe Keys (for payments)
STRIPE_SECRET_KEY=your_stripe_secret_key_here
STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key_here

# Frontend URL (set after Vercel deployment)
FRONTEND_URL=https://your-vercel-app.vercel.app

# Optional: Database URL for user auth (future)
DATABASE_URL=your_database_url_here

# Optional: Redis URL for caching (future)
REDIS_URL=your_redis_url_here